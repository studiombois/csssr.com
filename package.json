{
  "name": "csssr.com",
  "engines": {
    "node": ">=11.7.0"
  },
  "scripts": {
    "dev": "nodemon --exec node -r esm ./server/index.js",
    "build": "yarn compress-modal-static-files && next build",
    "start": "cross-env NODE_ENV=production node -r esm ./server/index.js",
    "lint:js": "eslint --ext .js,.jsx --fix --max-warnings=0 .",
    "check-sitemap": "node -r esm ./server/check-sitemap.js",
    "compress-modal-static-files": "yarn compress-modal-css && yarn compress-modal-js",
    "compress-modal-css": "cleancss -o public/modal/modal.min.css public/modal/modal.css",
    "compress-modal-js": "terser public/modal/modal.js -c -o public/modal/modal.min.js",
    "test": "cross-env NODE_ENV=development jest --watch",
    "test-ci": "cross-env NODE_ENV=development jest"
  },
  "dependencies": {
    "@csssr/core-design": "^6.0.2",
    "@csssr/csssr-amo": "^3.5.3",
    "@csssr/csssr.images": "^3.1.1",
    "@emotion/babel-preset-css-prop": "^11.0.0",
    "@emotion/eslint-plugin": "^11.0.0",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@sentry/browser": "^6.0.2",
    "@sentry/node": "^6.0.2",
    "@svgr/webpack": "^5.5.0",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "accept-language-parser": "^1.5.0",
    "babel-plugin-ramda": "^2.0.0",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "clean-css-cli": "^4.3.0",
    "color": "^3.1.2",
    "compression-webpack-plugin": "^6.0.2",
    "cookie-parser": "^1.4.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.16.1",
    "detect-browser": "^5.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-static-gzip": "^2.1.1",
    "fast-glob": "^3.2.5",
    "file-loader": "^6.2.0",
    "final-form": "^4.20.1",
    "final-form-calculate": "^1.3.2",
    "final-form-focus": "^1.1.2",
    "googleapis": "^67.0.0",
    "lint-staged": "^10.5.3",
    "lottie-web": "^5.7.6",
    "next": "^10.0.5",
    "nodemailer": "^6.4.17",
    "object-to-formdata": "^4.1.0",
    "prop-types": "^15.7.2",
    "ramda": "^0.27.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-final-form": "^6.5.2",
    "react-focus-lock": "^2.5.0",
    "react-gtm-components": "^0.5.0",
    "react-lazyload": "^3.1.0",
    "react-outside-click-handler": "^1.3.0",
    "react-reveal": "^1.2.2",
    "react-transition-group": "^4.4.1",
    "scroll-lock": "^2.1.4",
    "sitemap": "6.3.5",
    "stream": "^0.0.2",
    "terser": "^5.5.1"
  },
  "devDependencies": {
    "@csssr/eslint-config-core": "^1.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "ip": "^1.1.5",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test-ci && npm run check-sitemap && lint-staged"
    }
  }
}
